{{#each this}}

<div class="card">
    <h1 class="card-title">{{name}}</h1>
    <div class="information">
        <div class="info-block">
            <p class="card-text">Capital: {{capital}}</p>
            <p class="card-text">Population: {{population}}</p>
            <p class="card-text">Languages:</p>
            <ul class="list-group">
                {{#each languages}}
                <li class="list-item">{{nativeName}}</li>
                {{/each}}
            </ul>
        </div>
        <div class="card-img">
            <img class="img" src="{{flag}}" width="450" height="450" alt="{{name}}">
        </div>

    </div>

</div>


{{/each}}